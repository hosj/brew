extends layout
block content
	.row
		.large-12.columns
			a.button.right.tiny(data-reveal-id="addFermentable") New Fermentable 	
			table#fermentables(style="width: 100%")
				thead
					tr
						th Maltster
						th Name
						th PPG
						th Color
						th Description
				tbody
	#addFermentable.reveal-modal.small(data-reveal)
		h2 Fermentable Info
		fieldset
			.row.small-12.columns
				.small-2.columns
					label.right.inline(for='inputMaltster') Malster:
				.small-10.columns 
					input#inputMaltster(type='text', placeholder='Who makes the malt')
			.row.small-12.columns
				.small-2.columns
					label.right.inline(for='inputName') Name:
				.small-10.columns
					input#inputName(type='text', placeholder='Name of the Malt')
			.row.small-12.columns
				.small-2.columns
					label.right.inline(for='inputPPG') PPG:
				.small-10.columns
					input#inputPPG(type='text', placeholder='#.####')
			.row.small-12.columns
				.small-2.columns
					label.right.inline(for='inputColor') Color:
				.small-10.columns
					input#inputColor(type='text', placeholder='SRM')
			.row.small-12.columns
				.small-2.columns
					label.right.inline(for='inputDesc') Description:
				.small-10.columns
					textarea#inputDesc
				

		button#btnAddFermentable.right Add Fermentable
		a.close-reveal-modal &#215;
	#deleteFermentable.reveal-modal.small(data-reveal)
		h4 Are you sure you want to delete this fermentable?
		h1#deleteFermentableName
		input#deleteFermentableID(type='hidden')
		ul.button-group.right.radius
			li
				a.button#btnDeleteFermentable.right(href="#") Yes
			li
				a.button#btnCancel.right(href="#") No
		a.close-reveal-modal &#215;
	script(src='/javascripts/fermentables.js')
