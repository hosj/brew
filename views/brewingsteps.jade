extends layout
block content
	///////////////////////////////////////////////////////////////////
	//		Progress bar
	//
	.large-12.columns
		.panel.radius
			a#finishbrewing(href='#').button.right.tiny.radius Finished Brewing
			h4 Brew Progress
			.row  
			.large-3.columns.progress.brewprogress.leftround
				.progress-timer.text-left#brewmetersteeptext Steep
				span.meter#brewmetersteep(style='width: 0;')
			
			.large-9.columns.progress.brewprogress.rightround
				.progress-timer.text-left#brewmeterboiltext Boil
				span.meter#brewmeterboil(style='width: 0;')
			.row
				label  
			input#recipe_id(type="hidden",value="#{_id}")
	
	.large-6.columns
		.panel.radius
			h4 In the pot
			#inPot(width="100%")
	.large-6.columns
		.panel.radius
			h4 Needs Added
			#needsAdded(width="100%")
			
	script(src='/javascripts/brewingsteps.js')
	
	#modalSure.reveal-modal.small(data-reveal='')
		p Are you sure?
		a#alert-close.close-reveal-modal(href='#') ×
		a#alert-cancel.button.alert(href='#') Cancel
		a#alert-ok.button.alert(href='#') Ok

	
	#modalFinishBrew.reveal-modal.large(data-reveal='')
		h1 Are you finished with this brew?
		p It should now be cooling down getting ready for you to move it to the fermentor and pitch the yeast?
		

		a#alert-close.close-reveal-modal(href='#') ×
		ul.button-group.right.radius
			li
				a#finish-yes.button(href='#') Yes
			li
				a#finish-no.button(href='#') No